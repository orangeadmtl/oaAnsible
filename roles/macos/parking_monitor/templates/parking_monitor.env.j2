# Parking Monitor Environment Configuration
# Generated by Ansible for {{ inventory_hostname }}

# API Configuration
PARKING_MONITOR_HOST=127.0.0.1
PARKING_MONITOR_PORT={{ parking_monitor_service.port }}

# Environment
PARKING_MONITOR_ENV={{ parking_monitor_environment.PARKING_MONITOR_ENV }}
TARGET_ENV={{ parking_monitor_environment.TARGET_ENV }}

# Logging
LOG_LEVEL={{ parking_monitor_environment.LOG_LEVEL }}

# Python
PYTHONPATH={{ parking_monitor_environment.PYTHONPATH }}

# Site Configuration
SITE_NAME={{ parking_monitor_environment.SITE_NAME }}
SITE_LOCATION={{ parking_monitor_environment.SITE_LOCATION }}
DEVICE_ROLE={{ parking_monitor_environment.DEVICE_ROLE }}
PARKING_ZONE={{ parking_monitor_environment.PARKING_ZONE }}

# Network
TAILSCALE_SUBNET={{ parking_monitor_environment.TAILSCALE_SUBNET }}

# Camera Configuration (from host vars)
{% if camera is defined %}
CAMERA_SOURCE={{ camera.source | default(0) }}
CAMERA_RESOLUTION={{ camera.resolution | default('1920x1080') }}
CAMERA_FPS={{ camera.fps | default(30.000030) }}
{% endif %}

# Parking Zones (from host vars)
{% if parking_zones is defined %}
TOTAL_PARKING_SPACES={{ parking_zones.total_spaces | default(8) }}
{% endif %}