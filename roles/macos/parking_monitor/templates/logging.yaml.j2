# Logging Configuration for Parking Monitor
# Generated by Ansible for {{ inventory_hostname }}

version: 1
disable_existing_loggers: false

formatters:
  standard:
    format: '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
    datefmt: '%Y-%m-%d %H:%M:%S'
  
  detailed:
    format: '%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s'
    datefmt: '%Y-%m-%d %H:%M:%S'

handlers:
  console:
    class: logging.StreamHandler
    level: {{ parking_monitor_logging.level }}
    formatter: standard
    stream: ext://sys.stdout

  file:
    class: logging.handlers.RotatingFileHandler
    level: {{ parking_monitor_logging.level }}
    formatter: detailed
    filename: {{ parking_monitor_repository.destination }}/logs/parking_monitor.log
    maxBytes: {{ parking_monitor_logging.max_file_size | regex_replace('MB', '') | int * 1024 * 1024 }}
    backupCount: {{ parking_monitor_logging.max_files }}
    encoding: utf8

  error_file:
    class: logging.handlers.RotatingFileHandler
    level: ERROR
    formatter: detailed
    filename: {{ parking_monitor_repository.destination }}/logs/error.log
    maxBytes: 10485760  # 10MB
    backupCount: 3
    encoding: utf8

loggers:
  parking_monitor:
    level: {{ parking_monitor_logging.level }}
    handlers: [{% if parking_monitor_logging.console_output %}console, {% endif %}{% if parking_monitor_logging.file_output %}file{% endif %}]
    propagate: false

  uvicorn:
    level: {{ parking_monitor_logging.level }}
    handlers: [{% if parking_monitor_logging.file_output %}file{% endif %}]
    propagate: false

  uvicorn.access:
    level: WARNING
    handlers: [{% if parking_monitor_logging.file_output %}file{% endif %}]
    propagate: false

root:
  level: {{ parking_monitor_logging.level }}
  handlers: [{% if parking_monitor_logging.console_output %}console, {% endif %}{% if parking_monitor_logging.file_output %}file, {% endif %}error_file]