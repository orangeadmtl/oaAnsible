    ethtool -S {{ interface }} 2>/dev/null | grep -E "error|drop|crc|collision|carrier" | sed 's/^/  /' || echo "  No error statistics available"
else
    echo "  ethtool not available"
fi
echo
{% endfor %}
{% endif %}

echo
