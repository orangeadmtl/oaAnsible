echo "     sudo ethtool -s {{ interface }} autoneg on"
{% endfor %}
{% endif %}
echo "  2. Disable Wake-on-LAN:"
{% if ethernet_interfaces %}
{% for interface in ethernet_interfaces %}
echo "     sudo ethtool -s {{ interface }} wol d"
{% endfor %}
{% endif %}
